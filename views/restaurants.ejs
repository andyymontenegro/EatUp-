<% include partials/header %>

<div class="container">
<header class="jumbotron">
  <div class="container">
  <h1>View your favorite restaurants!</h1>
  <br>
  <p><a class="btn btn-primary btn-lg" href="/restaurants/new">Add a new restaurant!</a></p>
  </div>
</header>

    <div class="row" style="display: flex-wrap: wrap;">
        <% restaurants.forEach(function(restaurant){ %>
           <div class="col-md-3 col-sm-6">
               <div class = "thumbnail">
                   <img src="<%= restaurant.image %>">
               </div>
               <div class="caption">
                   <h4><%= restaurant.name %></h4>
                </div>
           </div>
        <% }); %>
    </div>
</div>
<% include partials/footer %>